/**
 * @param EntityInterface $entity
 * @param bool $include_fields
 * @return \Everyman\Neo4j\Node
 */
function neo4j_connector_add_entity_to_neo4j(EntityInterface $entity, $include_fields = TRUE) {
  $indexParam = new Neo4JDrupalIndexParam(NEO4J_CONNECTOR_ENTITY_INDEX_PREFIX . $entity->entityType(), 'entity_id', $entity->id());

  $properties = array();
  \Drupal::moduleHandler()->alter('neo4j_connector_entity_properties', $properties, $entity);

  $labels = array();
  \Drupal::moduleHandler()->alter('neo4j_connector_entity_labels', $labels, $entity);

  return Neo4JDrupal::sharedInstance()->addEntity($entity, $properties, $indexParam, $labels, $include_fields);
}

/**
 * Helper function to collect graph node properties of a node to store.
 *
 * @param $properties
 *  Property array.
 * @param $entity
 *  Node object.
 * @return array
 *  Property key value array.
 */
function neo4j_connector_neo4j_connector_entity_properties_alter(array &$properties, EntityInterface $entity) {
  switch ($entity->entityType()) {
    case 'node':
      $properties['title'] = $entity->title[0]->getValue()['value'];
      break;

    case 'user':
      $properties['name'] = $entity->name[0]->getValue()['value'];
      $properties['mail'] = $entity->mail[0]->getValue()['value'];
      break;
  }

  $properties['entity_id'] = $entity->id();
  $properties['entity_type'] = $entity->entityType();
  $properties['bundle'] = $entity->bundle();
}

/**
 * @param array $labels
 * @param EntityInterface $entity
 */
function neo4j_connector_neo4j_connector_entity_labels_alter(array &$labels, EntityInterface $entity) {
  $labels[] = 'entity';
  $labels[] = 'entity:' . $entity->entityType();
}

